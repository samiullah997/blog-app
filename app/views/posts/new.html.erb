<div class="container">
<% if flash[:success] %>
  <div class="notice"><%= flash[:success] %></div>
  <%end%>
<% if flash[:error]%>
  <div class="notice"><%= button_to 'Login First', new_user_session_url %></div>
<% end %>
</div>
<div class="post-container">
  <h1>Create New Post</h1>

  <%= form_with model: @post, url: posts_new_path, method: :post, scope: :post do |f| %>
    <div class="column">
    <%= f.text_field :title, placeholder: 'Title of post', class: 'text-input' %>
    <%= f.text_area :text,placeholder: 'Description of post' %>
    <%= f.submit %>
    </div>
  <% end %>
</div>